{
    "name": "brevid/brevid",
    "description": "Generate short, clean IDs",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/stlln/brevid-php/",
    "authors": [
        {
            "name": "stlln"
        }
    ],
    "keywords": [
        "ids"
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "sqids/sqids": "^0.4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.0",
        "slope-it/clock-mock": "^0.4.0",
        "php-mock/php-mock-phpunit": "^2.10"
    },
    "autoload": {
        "psr-4": {
            "BrevId\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BrevId\\Tests\\": "tests/"
        }
    }
}
